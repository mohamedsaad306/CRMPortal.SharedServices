@model CRMPortal.SharedServices.ViewModels.HelpDeskIndexViewModel
@{
    ViewBag.Title = "Index";
}

@*@Html.ActionLink("New Reqest", "Edit", "HelpDesk", null, new { @class = "label label-success" })
    <br />*@
<div class="container">

    <div class="clearfix"></div>

    <fieldset>
        <legend class="legend">Help Desk</legend>

        <div class="panel">

            <div class="panel-body">

                <div>
                    @Html.ActionLink("Create Help Desk Request", "Edit", "HelpDesk", null, new { @class = "new" })
                </div>
                <div style="margin-top: 10px"></div>

                <table data-toggle="table"
                       data-pagination="true"
                       data-search="true"
                       data-show-refresh="false"
                       data-show-toggle="true"
                       data-show-columns="true"
                       @*data-toolbar="#toolbar"*@
                       class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Request Number </th>
                            <th>Details</th>
                            <th>Status</th>
                            <th>Current Responsable</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (var r in Model.Requests)
                            {
                                <tr>
                                    <td><a href="/HelpDesk/Edit/@r.Id">@r.RequestTitle</a></td>
                                    <td>@r.RequestNumber</td>
                                    <td>@r.RequestDetails</td>
                                    <td>@r.StatusReason</td>
                                    <td>@r.RequestOwner</td>
                                </tr>
                            }
                            if (Model.Requests.Count == 0)
                            {
                                <h4>No Current Requests to display </h4>
                            }
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </fieldset>
</div>


